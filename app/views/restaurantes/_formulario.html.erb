<h1>Formulario nuevos restaurantes</h1>
<%= form_with(model: base_restaurante) do |formulario| %>
    <%= formulario.label        :nombre %>
    <%= formulario.text_field   :nombre %>
    <% if base_restaurante.errors[:nombre].any? %>
        <div class="alert alert-warning" role="alert">
            <%= base_restaurante.errors[:nombre].first %>
        </div>
    <% end %>

    <div class="mb-3">
        <%= formulario.label :tipo_comida_id, class: 'form-label' %>
        <%= formulario.select :tipo_comida_id, 
            options_from_collection_for_select(tipos_comidas, :id, :tipo, base_restaurante.tipo_comida_id),
            { include_blank: 'Elige un tipo de comida' },
            class: "form-select" %>
        <% if base_restaurante.errors[:tipo_comida_id].any? %>
            <div class="alert alert-danger" role="alert">
                <%= base_restaurante.errors[:tipo_comida_id].first %>
            </div>
        <% end %>
    </div>
    
    <%= formulario.submit %>
<% end %>